<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'user_info', user: @user, book: @newbook %>

    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table table-hover table-inverse">
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image %></br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td>
              <% if @user.id == current_user.id %>
                <%= link_to "Edit", edit_book_path, class: "btn btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @user.id == current_user.id %>
                <%= link_to "Destroy", book_path, class: "btn btn-danger", method: :delete, 'data-confirm' => '本当に消しますか？' %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>